.row
  .col-md-4.col-md-offset-4
    %h1 Listing products

%br

%table.table.table-striped
  %tr
    %th Nr
    %th Title
    %th Description
    %th Price
    %th

  - products.each_with_index do |product, index|
    %tr
      %td= index+1
      %td= product.title
      %td= product.description
      %td= product.price
      %td
        = link_to 'Show', category_product_path(product.category, product), class: 'btn btn-default'
        - if can? :edit, product
          = link_to 'Edit', edit_category_product_path(product.category, product), class: 'btn btn-primary'
        - if can? :destroy, product  
          = link_to 'Destroy', category_product_path(product.category, product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

.row
  .col-md-4.col-md-offset-4
    = will_paginate products, renderer: BootstrapPagination::Rails

%br
